<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="www.netproxy.web.ui.App"
        android:allowBackup="true"
        android:enableOnBackInvokedCallback="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.KsuWebUI"
        tools:targetApi="33">

        <activity
            android:name="www.netproxy.web.ui.ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE_PREFERENCES" />
            </intent-filter>
        </activity>

        <!-- 开启代理磁贴 -->
        <service
            android:name="www.netproxy.web.ui.tiles.StartProxyTileService"
            android:label="@string/tile_start_proxy"
            android:icon="@drawable/ic_tile_start"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <!-- 关闭代理磁贴 -->
        <service
            android:name="www.netproxy.web.ui.tiles.StopProxyTileService"
            android:label="@string/tile_stop_proxy"
            android:icon="@drawable/ic_tile_stop"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <!-- 重启代理磁贴 -->
        <service
            android:name="www.netproxy.web.ui.tiles.RestartProxyTileService"
            android:label="@string/tile_restart_proxy"
            android:icon="@drawable/ic_tile_restart"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

        <!-- 智能状态磁贴 -->
        <service
            android:name="www.netproxy.web.ui.tiles.ProxyStatusTileService"
            android:label="@string/tile_proxy_status"
            android:icon="@drawable/ic_tile_status"
            android:permission="android.permission.BIND_QUICK_SETTINGS_TILE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.service.quicksettings.action.QS_TILE" />
            </intent-filter>
        </service>

    </application>


</manifest>